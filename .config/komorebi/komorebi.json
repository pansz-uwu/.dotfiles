{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.36/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.json",
  "window_hiding_behaviour": "Cloak",
  "mouse_follows_focus": false,
  "animation": {
    "enabled": true,
    "style": "EaseInOutExpo",
    "fps": 165
  },
  "transparency": true,
  "transparency_alpha": 245,
  "default_workspace_padding": 6,
  "default_container_padding": 2,
  "border": true,
  "border_width": 2,
  "border_offset": -1,
  "border_style": "Square",
  "theme": {
    "palette": "Base16",
    "name": "DefaultDark",
    "unfocused_border": "Base01",
    "single_border": "Base04",
    "floating_border": "Base04"
  },
  "ignore_rules": [
    {
      "id": "Riot Client.exe",
      "kind": "Exe"
    },
    {
      "id": "javaw.exe",
      "kind": "Exe"
    }
  ],
  "floating_applications": [
    {
      "id": "obs64.exe",
      "kind": "Exe"
    },
    {
      "id": "Notepad.exe",
      "kind": "Exe"
    },
    {
      "id": "StartAllBackCfg.exe",
      "kind": "Exe"
    },
    {
      "id": "snes9x-x64.exe",
      "kind": "Exe"
    },
    {
      "id": "explorer.exe",
      "kind": "Exe"
    },
    {
      "id": "vlc.exe",
      "kind": "Exe"
    },
    {
      "id": "Spotify.exe",
      "kind": "Exe"
    },
    {
      "id": "Photos.exe",
      "kind": "Exe"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "BSP"
        },
        {
          "name": "III",
          "layout": "BSP"
        },
        {
          "name": "IV",
          "layout": "BSP"
        },
        {
          "name": "V"
        }
      ]
    }
  ]
}
